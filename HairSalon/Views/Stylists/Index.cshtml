@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
      <h3>No stylists have been added yet!</h3>
}
else
{
  <div class="SearchForm">
  @using (Html.BeginForm("Find", "Stylists", "post"))
  {
    @Html.Label("Search for a stylist")
          <p>@Html.TextBox("queryString")</p>
          <p></p>
          <p><input type="submit" value="Search for a stylist" class="button"></p>
  }
  </div>

  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
}
<br>
<span></span>
<br>
<div class="bottom-link">
<span class="span-left">@Html.ActionLink("Add new stylist", "Create")</span>
<span class="span-center">@Html.ActionLink("Add new Client", "Create", "Clients")</span>
<span class="span-right">@Html.ActionLink("Home", "Index", "Home")</span>
</div>
