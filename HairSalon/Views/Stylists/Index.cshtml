@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@using (Html.BeginForm("Find", "Restaurants", "post"))
{
  @Html.Label("Search for a stylist")
  <p>@Html.TextBox("queryString")</p>
  <p></p>
  <p><input type="submit" value="Search for a stylist" class="button"></p>
}


<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Add new Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>