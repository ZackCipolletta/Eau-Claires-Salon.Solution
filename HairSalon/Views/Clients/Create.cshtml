@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<p><strong>NOTE:</strong> You need to have at least one stylist before you can add an client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to create a stylist.</p>
<h4>Add a new client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)<span>&nbsp;</span>
  @Html.TextBoxFor(model => model.Name)
  <p></p>

  @Html.LabelFor(model => model.Stylist)<span>&nbsp;</span>
  @Html.DropDownList("StylistId")
  <p></p>

  <input type="submit" value="Add new client" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>